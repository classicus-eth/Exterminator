{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "outDir": "build",
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": ["test/**/*.ts", "src/**/*.ts", "environment.d.ts"]
}
